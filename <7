    ];

    let indice = 0;

    function mostrarMensaje() {
      // Mostrar mensaje
      const mensaje = document.getElementById('mensaje');
      mensaje.style.opacity = '0';
      setTimeout(() => {
        mensaje.innerText = mensajes[indice];
        mensaje.style.opacity = '1';
        indice = (indice + 1) % mensajes.length;
      }, 300);

      // Crear corazón animado (marrón)
      const corazon = document.createElement('div');
      corazon.classList.add('corazon-flotante');
      corazon.style.left = (50 + Math.random() * 100 - 50) + "%";
      corazon.style.color = `rgba(${78 + Math.random()*20}, ${52 + Math.random()*20}, ${46 + Math.random()*20}, 0.8)`; // Variaciones de marrón
      corazon.style.fontSize = (20 + Math.random() * 30) + "px";
      corazon.innerText = "❤";
      document.body.appendChild(corazon);

      // Eliminar después de la animación
      setTimeout(() => {
        corazon.remove();
      }, 2500);
    }
  </script>

